<%- include('../partials/frames/head')%>
<div class="grid-container">

    <div class="grid-header">
        <%- include('../partials/frames/header')%>
    </div>

    <div class="grid-menu">

        <h1 class="p-title new-card-title">Generate PokéGen Card!</h1>
         <%if (!user.cards.length) {%>
        <h2 class="create-message"><%= newMessage %></h2> 
        <%}%>

    <form action="/cards" method="POST">
        <div class="left input-box">

            <section>
                <div >Name:</div>
                <input type="text" name="name" maxlength="15" placeholder="add PokéGen name" />
            </section>

            <section>
                <div>Image:</div>
                <input type="text" name="url" placeholder="add image url" />
            </section>

            <section>
                <div>HP:</div>
                <input type="text" name="hp" maxlength="3" placeholder="add hit points" />
            </section>

            <section>
                <div>Element:</div>     
                    <select name="type">
                        <%-include('../partials/types/elements')%>
                    </select>             
            </section>

            <section>
                <div>Stats:</div>
                <input type="text" name="stats" maxlength="36" placeholder="add bar stats" />
            </section>

            <section>
                <div>Bottom:</div>
                <textarea class="boxBottom" type="text" name="boxBottom" maxlength="80" placeholder="add to the bottom of the card"></textarea> 
            </section>

            <section>
                <div>Story:</div>
                <textarea type="text" name="story" class="story-input" placeholder="What is your card's story? This will appear when someone views your card! If this is blank it will be a sad card."></textarea>                    
            </section>
                <div class="create-button">
                <button type="submit">Create</button>   
            </div>    
        </div>

        <div class="right input-box"> 
            <section>
                <div>Attack:</div>
                <input type="text" name="attack" maxlength="20" placeholder="add 1st attack" />
            </section>
            
            <section>
                <div>Type:</div>     
                    <select class="attack-option" name="attackType1a">
                        <%-include('../partials/types/options')%>
                    </select>   
                    <select class="attack-option" name="attackType1b">
                        <%-include('../partials/types/options')%>
                    </select>              
            </section>
            
            <section>
                <div>Type:</div>     
                    <select class="attack-option" name="attackType1c">
                        <%-include('../partials/types/options')%>
                    </select>         
                    <select class="attack-option" name="attackType1d">
                        <%-include('../partials/types/options')%>
                    </select>      
            </section>

            <section>
                <div>Damage:</div>
                <input type="text" name="damage" maxlength="4" placeholder="add 1st damage" />
            </section>

            <section>
                <div>Details:</div>
                <textarea type="text" name="description" maxlength="100" class="description-input" placeholder="add 1st description%>"></textarea>
            </section>
            
            <section>
                <div>Attack 2:</div>
                <input type="text" name="attack2" maxlength="20" placeholder="add 2nd attack" />
            </section>

            <section>
                <div>Type:</div>     
                    <select class="attack-option" name="attackType2a">
                        <%-include('../partials/types/options')%>
                    </select>   
                    <select class="attack-option" name="attackType2b">
                        <%-include('../partials/types/options')%>
                    </select>              
            </section> 

            <section>
                <div>Type:</div>     
                    <select class="attack-option" name="attackType2c">
                        <%-include('../partials/types/options')%>
                    </select>         
                    <select class="attack-option" name="attackType2d">
                        <%-include('../partials/types/options')%>
                    </select>      
            </section>

            <section>
                <div>Damage 2:</div>
                <input type="text" name="damage2" maxlength="4" placeholder="add 2nd damage" />
            </section>

            <section>
                <div>Details 2:</div>
                <textarea type="text" name="description2" maxlength="100" class="description-input" placeholder="add 2nd description%>"></textarea>
            </section>
            
            <section>
                <div>Weakness:</div>
                <input type="text" name="weakness" maxlength="12" placeholder="add weakness" />
            </section>
            
            <section>
                <div>Resistance:</div>
                <input type="text" name="resistance" maxlength="12" placeholder="add resistance" />
            </section>
        </div>
    </form>        
    </div>

    <div id="sample-card" class="grid-main">

        <%-include('../partials/samplecard')%>
           <button class="modal-button"><a href="#open-modal">?</a></button>
            <div id="open-modal" class="modal-window">
                <div class="modal">
                    <a href="#modal-close" title="Close" class="modal-close">close &times;</a>
                    <h1>For the best card follow these steps</h1>
                    <div>
                        <ul>
                            <li>Fill out the card form completely</li>
                            <li>Best quality image size  should be 000 X 000</li>
                            <li>Gif files can be used for card display image </li>
                            <li>Card types can be chosen from 1 of 14 total types</li>
                            <li>Attack types can be chosen from 1 of 18 total types</li>
                            <li>Please use the direct link for the image URL ending in .jpg or .png. Example: https://i.imgur.com/ZI94U71.jpg</li>
                        </ul>
                    </div>
                </div>
            </div>
    </div>

</div>
<%-include('../partials/frames/footer')%>

